
{
  "rules": {
    "history": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },

    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $uid"
      }
    },

    "user_chats": {
      "$uid": {
        "$chatId": {
          ".read": "auth != null && auth.uid == $uid",
          ".write": "auth != null && auth.uid == $uid"
        }
      }
    },

    "chats": {
      "$chatId": {
        "messages": {
          "$messageId": {
            ".read": "auth != null && root.child('user_chats').child(auth.uid).child($chatId).exists()",
            ".write": "auth != null && newData.child('senderId').val() == auth.uid"
          }
        }
      }
    }
  }
}
