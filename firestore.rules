rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles can be read and updated by the user themselves.
    match /user_profiles/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to create/update their canonical user document used by the app
    match /users/{uid} {
      allow create, read, update: if request.auth != null && request.auth.uid == uid;
    }

    // Scan history documents
    match /scan_history/{scanId} {
      // Allow create if the user is authenticated and the new document's
      // nested userId matches the user's ID.
      allow create: if request.auth != null && request.resource.data.scanResult.userId == request.auth.uid;

      // Allow read and delete if the user is authenticated and is requesting their own data.
      allow read, delete: if request.auth != null && resource.data.scanResult.userId == request.auth.uid;
    }
  }
}
